{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Template-specific configuration for Blech-cli (create-blech)",
    "type": "object",
    "properties": {
        "commands": {
            "type": "array",
            "description": "A list of commands to run when the template has been copied",
            "items": {
                "type": "string"
            }
        },
        "ignore": {
            "type": "array",
            "description": "A list of glob patterns for files to exclude from the final output",
            "items": {
                "type": "string"
            }
        }
    }
}
